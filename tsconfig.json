{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2015",
    "declaration": true,
    "importHelpers": true,
    "noImplicitAny": false,
    "noEmitHelpers": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "allowJs": false,
    "lib": [
      "dom",
      "es5",
      "scripthost",
      "es2015.promise"
    ],
    "skipLibCheck": true,
    "experimentalDecorators": true
  },
  "compileOnSave": true,
  "exclude": [
    "node_modules"
  ]
}
